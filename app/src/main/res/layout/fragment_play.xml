<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlayFragment">

    <TextView
        android:id="@+id/textViewChooseCategory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Choose your category!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewChooseSubCategory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Choose your subcategory!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll1stRowOfCategoriesButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/textViewChooseCategory"
        app:layout_constraintTop_toBottomOf="@+id/textViewChooseCategory"
        android:padding="2dp"
        android:layout_marginHorizontal="0dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btnGeneralKnowledge"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="General Knowledge" />

        <Button
            android:id="@+id/btnScienceAndTechnology"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Science &amp; Technology" />

        <Button
            android:id="@+id/btnHistoryAndGeography"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="History &amp; Geography"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2ndRowOfCategoriesButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/ll1stRowOfCategoriesButtons"
        app:layout_constraintTop_toBottomOf="@+id/ll1stRowOfCategoriesButtons"
        android:padding="2dp"
        android:layout_marginHorizontal="0dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btnEntertainment"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Entertainment" />

        <Button
            android:id="@+id/btnSports"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Sports" />

        <Button
            android:id="@+id/btnArtsAndLiterature"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Arts &amp; Literature" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRowOfGeneralKnowledgeSubs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/textViewChooseSubCategory"
        app:layout_constraintTop_toBottomOf="@+id/textViewChooseSubCategory"
        android:padding="2dp"
        android:layout_marginHorizontal="0dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btnTrivia"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Trivia" />

        <Button
            android:id="@+id/btnWorldFacts"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Wordl Facts" />

        <Button
            android:id="@+id/btnFamousPersonalities"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Famous Personalities"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1stRowOfScienceAndTechnologySubs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/textViewChooseSubCategory"
        app:layout_constraintTop_toBottomOf="@+id/textViewChooseSubCategory"
        android:padding="2dp"
        android:layout_marginHorizontal="0dp">

        <Button
            android:id="@+id/btnPhysics"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Physics"
            android:visibility="gone"/>

        <Button
            android:id="@+id/Chemistry"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Chemistry"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2ndRowOfScienceAndTechnologySubs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/textViewChooseSubCategory"
        app:layout_constraintTop_toBottomOf="@+id/textViewChooseSubCategory"
        android:padding="2dp"
        android:layout_marginHorizontal="0dp">

        <Button
            android:id="@+id/btnBiology"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:visibility="gone" />

        <Button
            android:id="@+id/ComputerScience"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBackCategory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:visibility="visible">

    <Button
        android:id="@+id/btnBackCategory"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:text="Choose another category "/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>