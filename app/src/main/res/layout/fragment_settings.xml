<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment">

    <TextView
        android:id="@+id/textViewWelcomeText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Settings Fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llLanguageFirstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="0dp">
        <CheckBox
            android:id="@+id/cbEnglish"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="English" />

        <CheckBox
            android:id="@+id/cbRomana"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Romana" />
        <CheckBox
            android:id="@+id/cbGerman"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="German" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llLanguageSecondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llLanguageFirstRow"
        android:layout_marginHorizontal="0dp">
        <CheckBox
            android:id="@+id/cbFrancais"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Francais" />

        <CheckBox
            android:id="@+id/cbHungarian"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Hungarian" />
        <CheckBox
            android:id="@+id/cbJapan"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Japan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1stRowOfSettingsButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/ll2ndRowOfSettingsButtons"
        app:layout_constraintBottom_toTopOf="@+id/ll2ndRowOfSettingsButtons"
        android:padding="2dp"
        android:layout_marginHorizontal="0dp">

        <Button
            android:id="@+id/btnAdjustSound"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Adjust sound" />

        <Button
            android:id="@+id/btnChangeLanguage"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Change Language" />

        <Button
            android:id="@+id/btnidk"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Bla bla bla" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2ndRowOfSettingsButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="2dp"
        android:layout_marginHorizontal="0dp">

        <Button
            android:id="@+id/btnAboutApp"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="About App" />

        <Button
            android:id="@+id/btnDevDetails"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Dev Details" />
        <Button
            android:id="@+id/btnReleaseNotes"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Release Notes" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>