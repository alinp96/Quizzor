<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StandardQuizFragment">

    <LinearLayout
        android:id="@+id/llRowOfScoreAndQNr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="2dp"
        android:layout_marginHorizontal="3dp">
            <TextView
                android:layout_weight="1"
                android:id="@+id/textViewShowQuestion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textAlignment="textStart"
                android:text="Question 2/10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/textViewShowScore"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:text="Score: 10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="24dp"
        android:maxLines="4"
        android:text="Here will appear the question. If it is longer than expected, go to the next line without any issues!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"/>

    <LinearLayout
        android:id="@+id/llRowOfTFButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="2dp"
        android:layout_marginHorizontal="3dp">

        <Button
            android:id="@+id/btnTrue"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="True" />

        <Button
            android:id="@+id/btnFalse"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="False" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>